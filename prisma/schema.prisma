// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Subscription {
  id                String   @id @default(cuid())
  email             String
  states            String   // Comma-separated list of state codes (e.g., "CA,TX,NY")
  verified          Boolean  @default(false)
  verificationToken String   @unique
  unsubscribeToken  String   @unique
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@unique([email])
}

model Report {
  id          String   @id @default(cuid())
  type        String   // RAID, CHECKPOINT, PATROL, DETENTION, SURVEILLANCE
  status      String   // ACTIVE, RESOLVED, UNVERIFIED
  city        String
  state       String
  address     String?
  lat         Float
  lng         Float
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([state])
  @@index([createdAt])
}

// Cached analytics data from public immigration data sources
model AnalyticsCache {
  id         String   @id @default(cuid())
  dataType   String   @unique // 'FULL_DATASET'
  data       Json     // Complete AnalyticsData object
  sourceHash String   // MD5 of source CSV for change detection
  fetchedAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

// Audit log for data refresh operations
model DataRefreshLog {
  id           String    @id @default(cuid())
  status       String    // 'SUCCESS' | 'FAILED' | 'IN_PROGRESS'
  recordCount  Int?
  errorMessage String?
  duration     Int?      // milliseconds
  triggeredBy  String    // 'CRON' | 'ADMIN'
  startedAt    DateTime  @default(now())
  completedAt  DateTime?
}
